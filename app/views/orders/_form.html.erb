<div class='row new-order'>
  <hr>

  <div class="col-lg-2">
    <h4 class='brand'>Address</h4>
    <%= render current_order.address %>
  </div>

  <%= form_for current_order do |f| %>
    <div class='col-lg-5'>
      <h4 class='brand'>Credit Card</h4>
      <%= f.fields_for :credit_card do |cc| %>
        <div class='form-group'>
          <%= cc.label :name do %>
            Name
            <%= cc.text_field :name, class: "form-control" %>
          <% end %>
        </div>

        <div class='form-group'>
          <%= cc.label :number do %>
            Number
            <%= cc.text_field :number, class: "form-control" %>
          <% end %>
        </div>

        <div class='form-group'>
          <%= cc.label :expiration do %>
            Expiration
            <%= cc.text_field :expiration, class: "form-control" %>
            <p class="help-block">(mm/yy)</p>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class='col-lg-5'>
      <h4 class='brand'>Shipping Option</h4>
      <div class='shipping-options well'>
        <span class='brand'>
          <div class = "radio">
            <form action="">
              <% 5.times do |i| %>
                <!-- &nbsp&nbsp&nbsp&nbsp
                <input type="radio" name="shipping_cost" value="$<%= @estimate.cost[i]%>">$<%= @estimate.cost[i]%>
                &nbsp&nbsp
                <%= @estimate.service[i] %> &nbsp&nbsp
                get it by <%= @estimate.delivery[i] %>
 -->

                <%= f.radio_button :shipping_cost, @estimate.cost[i]%>

                $<%= @estimate.cost[i]%> &nbsp&nbsp
                <%= @estimate.service[i] %> &nbsp&nbsp
                get it by <%= @estimate.delivery[i] %>

                <br>
                <br>
              <% end %>
            </form>
          </div>
        </span>
      </div>
      <%= f.submit "Checkout", class: "btn btn-success btn-block" %>
    </div>

  <% end %>
</div>
