<div class='row new-order'>
  <hr>
  <div class="col-lg-2">
    <h4 class='brand'>Address</h4>
    <%= render current_order.address %>
  </div>
  <%= form_for current_order do |f| %>
  <div class='col-lg-5'>
    <h4 class='brand'>Credit Card</h4>
    <%= f.fields_for :credit_card do |cc| %>
    <div class='form-group'>
      <%= cc.label :name do %>
      Name
      <%= cc.text_field :name, class: "form-control" %>
      <% end %>
    </div>

    <div class='form-group'>
      <%= cc.label :number do %>
      Number
      <%= cc.text_field :number, class: "form-control" %>
      <% end %>
    </div>

    <div class='form-group'>
      <%= cc.label :expiration do %>
      Expiration
      <%= cc.text_field :expiration, class: "form-control" %>
      <p class="help-block">(mm/yy)</p>
      <% end %>
    </div>
    <% end %>
  </div>

  <div class='col-lg-5'>
    <h4 class='brand'>Shipping Options</h4>
    <div class='shipping-options well'>
      <%= f.fields_for :shipment do |f| %>

        <span class='brand'><%= f.radio_button :carrier, @ups_shipping_info[0][0], :checked => true %><%= @ups_shipping_info[0][0] %>: $<%= convert_to_dollars(@ups_shipping_info[0][1]) %></span><br>
        <span class='brand'><%= f.radio_button :carrier, @fedex_shipping_info[0][0] %><%= @fedex_shipping_info[0][0] %>: $<%= convert_to_dollars(@fedex_shipping_info[0][1]) %></span><br>
        <span class='brand'><%= f.radio_button :carrier, @usps_shipping_info[0][0] %><%= @usps_shipping_info[0][0] %>: $<%= convert_to_dollars(@usps_shipping_info[0][1]) %></span><br>
        <span class='brand'><%= f.radio_button :carrier, @usps_shipping_info[4][0] %><%= @usps_shipping_info[4][0] %>: $<%= convert_to_dollars(@usps_shipping_info[4][1]) %></span><br>
        <%= f.submit "Checkout", class: "btn btn-success btn-block" %>
      <% end %>
    </div>
    <% end %>
  </div>

</div>
